{
  "compilerOptions": {
    "target": "esnext",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "jsx": "react",
    "isolatedModules": true,
    "noImplicitAny": false,
    "lib": ["es6"],
    "baseUrl": "./",
    "typeRoots": [ "node_modules/@types", "./types"],
    "paths": {
      "~/*": ["src/*"],
      "storybook/*": ["storybook/*"],
      "tests/*": ["tests/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
